module m1cs.MotorConfig

typealias Mode = "OFF" | "CONT" | "DISCRETE"

abstract class MotorConfigBase {
  mode: Mode = "OFF"

  contGain: Float

  contThreshold: Float

  discStart: Float

  discStop: Float

  operatingCurrent: Float

  standbyCurrent: Float

  limits: Limits
}

class Limits {
  offset: Float = 100.0
  scaleFactor: Float = 0.5
  upperLimit: Float = 25.0
  lowerLimit: Float = -25.0
}

class OffloadMotorConfig extends MotorConfigBase {
  mode = "OFF"
  contGain = 1.0
  contThreshold = 2.0
  discStart = 3.0
  discStop = 4.0
  operatingCurrent = 5.0
  standbyCurrent = 6.0
  limits = new Limits {}
}

class SnubberMotorConfig extends MotorConfigBase {
  mode = "CONT"
  contGain = 1.0
  contThreshold = 2.0
  discStart = 3.0
  discStop = 4.0
  operatingCurrent = 5.0
  standbyCurrent = 6.0
  limits = new Limits {}
}


